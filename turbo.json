{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^lint", "^check-types", "^bundle", "^build"],
      "env": [
        "PRISMA_DATABASE_URL",
        "MASTRA_DATABASE_URL",
        "OPENAI_API_KEY",
        "OPENAI_API_BASE_URL",
        "OPENAI_API_MODEL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^bundle"],
      "cache": false,
      "inputs": [".env"],
      "persistent": true
    },
    "bundle": {
      "dependsOn": ["^bundle"],
      "cache": true,
      "outputs": ["dist/**"]
    },
    "serve": {}
  }
}
