{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "types": ["node"],
    "lib": ["ES2023", "DOM"],
    "paths": {
      "@generatedPrisma/*": ["./generated/prisma/*","./generated/schemas/models/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "generated/**/*",
    "./eslint.config.js",
    "./prettier.config.js",
    "./prisma.config.ts"
  ],
  "exclude": ["node_modules"]
}
